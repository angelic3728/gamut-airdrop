contract Airdrop is Ownable, ReentrancyGuard {
    using SafeMath for uint256;

    bytes32 public merkleRoot;

    address public airdropToken;
    mapping(address=>bool) public airdropStates;
    address[] public airdropedUsersList;
    uint256 public totalAirdropedUsers;
    bool public airdropStarted;

    constructor(bytes32 merkleRoot_, address airdropToken_) {
        merkleRoot = merkleRoot_;
        airdropToken = airdropToken_;
    }

    function startAirdrop(uint256 airdropAmount_) external onlyOwner {
        require(IERC20(airdropToken).allowance(msg.sender, address(this)) >= airdropAmount_, "Airdrop Token doesn't allowed");
        IERC20(airdropToken).transferFrom(msg.sender, address(this), airdropAmount_);
        airdropStarted = true;
    }

    function stopAirdrop() external onlyOwner {
        airdropStarted = false;
        uint256 balance = IERC20(airdropToken).balanceOf(address(this));
        if (balance > 0) IERC20(airdropToken).transfer(msg.sender, balance);
    }
    
    function setMerkleRoot(bytes32 merkleRootHash) external onlyOwner
    {
        merkleRoot = merkleRootHash;
    }

    /**
     * @notice Verify merkle proof of the address
     */
    function verifyUserData(bytes32[] calldata _merkleProof, uint256 _amount) private view returns (bool)
    {
        bytes32 leaf = keccak256(abi.encodePacked(msg.sender, _amount));
        return MerkleProof.verify(_merkleProof, merkleRoot, leaf);
    }

    function airdrop(uint256 amount_, bytes32[] calldata merkleProof_) external nonReentrant {
        require(airdropStarted == true, "Airdrop is not started");
        require(verifyUserData(merkleProof_, amount_), "Validation failed");
        require(IERC20(airdropToken).balanceOf(address(this)) >= amount_, "Not enough balance in this contract");
        require(!airdropStates[msg.sender], "Airdrop permitted once");
        airdropStates[msg.sender] = true;
        airdropedUsersList.push(msg.sender);
        totalAirdropedUsers++;
        IERC20(airdropToken).transfer(msg.sender, amount_);
    }
}